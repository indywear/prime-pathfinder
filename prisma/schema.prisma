generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

// =====================
// User & Authentication
// =====================

model User {
  id              String    @id @default(cuid())
  lineUserId      String    @unique
  chineseName     String?
  thaiName        String?
  studentId       String?
  university      String?
  email           String?
  nationality     String?
  thaiLevel       ThaiLevel @default(BEGINNER)
  consent         Boolean   @default(false)
  registrationStep Int      @default(0)
  isRegistered    Boolean   @default(false)
  
  // Gamification
  totalPoints     Int       @default(0)
  currentLevel    Int       @default(1)
  lastSpinAt      DateTime?
  
  // Current Game State
  currentGameType    String?
  currentQuestionId  String?
  gameData           String?   @db.Text  // JSON data for game state
  
  // Timestamps
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @default(now()) @updatedAt
  
  // Relations
  submissions       Submission[]
  feedbackRequests  FeedbackRequest[]
  practiceSessions  PracticeSession[]
  badges            UserBadge[]
  vocabularyProgress UserVocabulary[]
  
  @@index([lineUserId])
}

enum ThaiLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

// =====================
// Tasks & Assignments
// =====================

model Task {
  id          String   @id @default(cuid())
  weekNumber  Int      @unique
  title       String
  description String   @db.Text
  contentUrl  String
  minWords    Int      @default(80)
  maxWords    Int      @default(120)
  deadline    DateTime
  isActive    Boolean  @default(true)
  
  // Rubric configuration (JSON)
  rubric      Json     @default("{\"grammar\": 25, \"vocabulary\": 25, \"organization\": 25, \"taskFulfillment\": 25}")
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  submissions      Submission[]
  feedbackRequests FeedbackRequest[]
  
  @@index([weekNumber])
  @@index([isActive])
}

// =====================
// Submissions
// =====================

model Submission {
  id           String   @id @default(cuid())
  userId       String
  taskId       String
  content      String   @db.Text
  wordCount    Int
  
  // Rubric scores
  grammarScore       Int @default(0)
  vocabularyScore    Int @default(0)
  organizationScore  Int @default(0)
  taskFulfillmentScore Int @default(0)
  totalScore         Int @default(0)
  
  // AI Feedback
  aiFeedback   String?  @db.Text
  
  // Gamification
  pointsEarned Int      @default(0)
  onTime       Boolean  @default(true)
  earlyBonus   Boolean  @default(false)
  
  submittedAt  DateTime @default(now())
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([taskId])
  @@index([submittedAt])
}

// =====================
// Feedback Requests
// =====================

model FeedbackRequest {
  id           String   @id @default(cuid())
  userId       String
  taskId       String?
  draftContent String   @db.Text
  aiFeedback   String?  @db.Text
  pointsEarned Int      @default(5)
  isRevision   Boolean  @default(false)
  
  requestedAt  DateTime @default(now())
  
  // Relations
  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  task Task? @relation(fields: [taskId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([requestedAt])
}

// =====================
// Practice Sessions
// =====================

model PracticeSession {
  id           String       @id @default(cuid())
  userId       String
  activityType ActivityType
  
  // Questions and answers (JSON arrays)
  questions    Json
  answers      Json
  
  correctCount Int          @default(0)
  totalCount   Int          @default(0)
  pointsEarned Int          @default(0)
  
  completedAt  DateTime     @default(now())
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([activityType])
}

enum ActivityType {
  // Vocabulary Games
  VOCAB_MATCH          // จับคู่คำ
  VOCAB_MEANING        // ความหมายคำศัพท์
  VOCAB_OPPOSITE       // คำตรงข้าม
  VOCAB_SYNONYM        // คำพ้องความหมาย

  // Grammar Games
  FILL_BLANK           // เติมคำ
  FIX_SENTENCE         // แก้ไขประโยค
  ARRANGE_SENTENCE     // เรียงประโยค
  SPEED_GRAMMAR        // Speed Grammar

  // Reading & Writing Games
  READ_ANSWER          // อ่านแล้วตอบ
  COMPOSE_SENTENCE     // แต่งประโยค
  SUMMARIZE            // สรุปเรื่อง
  CONTINUE_STORY       // เขียนต่อเรื่อง

  // Fun Games
  DAILY_VOCAB          // คำศัพท์รายวัน
  RACE_CLOCK           // แข่งกับเวลา
  VOCAB_GACHA          // กาชาคำศัพท์
}

// =====================
// Vocabulary
// =====================

model Vocabulary {
  id              String   @id @default(cuid())
  word            String   @unique
  meaning         String
  meaningChinese  String?
  exampleSentence String?
  difficulty      Difficulty @default(MEDIUM)
  
  createdAt       DateTime @default(now())
  
  // Relations
  userProgress    UserVocabulary[]
  
  @@index([difficulty])
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

model UserVocabulary {
  userId       String
  vocabularyId String
  correctCount Int      @default(0)
  wrongCount   Int      @default(0)
  lastPracticed DateTime @default(now())
  
  // Relations
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  vocabulary Vocabulary @relation(fields: [vocabularyId], references: [id], onDelete: Cascade)
  
  @@id([userId, vocabularyId])
  @@index([userId])
}

// =====================
// Badges & Achievements
// =====================

model Badge {
  id          String   @id @default(cuid())
  badgeType   String   @unique
  name        String
  nameThai    String
  description String
  iconUrl     String?
  requirement Int      @default(1)
  
  // Relations
  userBadges  UserBadge[]
}

model UserBadge {
  userId    String
  badgeId   String
  earnedAt  DateTime @default(now())
  
  // Relations
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge Badge @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  
  @@id([userId, badgeId])
  @@index([userId])
}

// =====================
// System Configuration
// =====================

model SystemConfig {
  id    String @id @default(cuid())
  key   String @unique
  value String
  
  @@index([key])
}

// =====================
// Chinese-Thai Vocabulary (New Game)
// =====================

model ChineseVocabulary {
  id           String   @id @default(cuid())
  chineseWord  String   @unique
  thaiMeaning  String
  category     String?
  
  createdAt    DateTime @default(now())
  
  @@index([category])
}

// =====================
// Fill-in-Blank Questions
// =====================

model FillBlankQuestion {
  id             String   @id @default(cuid())
  sentence       String   @db.Text
  answer         String
  category       String?
  difficulty     Difficulty @default(MEDIUM)

  createdAt      DateTime @default(now())

  @@index([category])
  @@index([difficulty])
}

// =====================
// Multiple Choice Questions
// =====================

model MultipleChoiceQuestion {
  id             String   @id @default(cuid())
  question       String   @db.Text
  optionA        String
  optionB        String
  optionC        String
  optionD        String
  correctAnswer  String   // A, B, C, or D
  category       String?
  difficulty     Difficulty @default(MEDIUM)

  createdAt      DateTime @default(now())

  @@index([category])
  @@index([difficulty])
}

// =====================
// Sentence Construction Pairs
// =====================

model SentenceConstructionPair {
  id         String   @id @default(cuid())
  word1      String
  word2      String
  category   String?
  
  createdAt  DateTime @default(now())
  
  @@index([category])
}

// =====================
// Writing Tasks with Examples
// =====================

model WritingTask {
  id              String   @id @default(cuid())
  taskNumber      Int      @unique
  title           String
  description     String   @db.Text
  bestExample     String   @db.Text
  generalExample  String   @db.Text
  badExample      String   @db.Text
  isActive        Boolean  @default(true)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  submissions     WritingSubmission[]
  
  @@index([taskNumber])
  @@index([isActive])
}

model WritingSubmission {
  id              String   @id @default(cuid())
  userId          String
  writingTaskId   String
  content         String   @db.Text
  
  // 5-Criteria Rubric Scores (1-4 each)
  contentScore       Int   @default(0)
  organizationScore  Int   @default(0)
  grammarScore       Int   @default(0)
  vocabularyScore    Int   @default(0)
  mechanicsScore     Int   @default(0)
  totalScore         Int   @default(0)
  
  // AI Feedback
  aiFeedback      String?  @db.Text
  pointsEarned    Int      @default(0)
  
  submittedAt     DateTime @default(now())
  
  // Relations
  writingTask WritingTask @relation(fields: [writingTaskId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([writingTaskId])
  @@index([submittedAt])
}

// =====================
// Vocabulary Match Questions
// =====================

model VocabMatchQuestion {
  id          String     @id @default(cuid())
  word        String
  meaning     String     // คำตอบถูก
  wrongA      String
  wrongB      String
  wrongC      String
  difficulty  Difficulty @default(MEDIUM)

  createdAt   DateTime   @default(now())

  @@index([difficulty])
}

// =====================
// Vocabulary Opposite Questions
// =====================

model VocabOppositeQuestion {
  id          String     @id @default(cuid())
  word        String
  opposite    String     // คำตอบถูก
  wrongA      String
  wrongB      String
  wrongC      String
  difficulty  Difficulty @default(MEDIUM)

  createdAt   DateTime   @default(now())

  @@index([difficulty])
}

// =====================
// Vocabulary Synonym Questions
// =====================

model VocabSynonymQuestion {
  id          String     @id @default(cuid())
  word        String
  synonym     String     // คำตอบถูก
  wrongA      String
  wrongB      String
  wrongC      String
  difficulty  Difficulty @default(MEDIUM)

  createdAt   DateTime   @default(now())

  @@index([difficulty])
}

// =====================
// Fix Sentence Questions
// =====================

model FixSentenceQuestion {
  id              String   @id @default(cuid())
  wrongSentence   String   @db.Text
  correctSentence String   @db.Text
  hint            String?
  difficulty      Difficulty @default(MEDIUM)

  createdAt       DateTime @default(now())

  @@index([difficulty])
}

// =====================
// Arrange Sentence Questions
// =====================

model ArrangeSentenceQuestion {
  id              String   @id @default(cuid())
  shuffledWords   String   @db.Text  // คำที่สลับ คั่นด้วย |
  correctSentence String   @db.Text
  difficulty      Difficulty @default(MEDIUM)

  createdAt       DateTime @default(now())

  @@index([difficulty])
}

// =====================
// Speed Grammar Questions
// =====================

model SpeedGrammarQuestion {
  id             String   @id @default(cuid())
  question       String   @db.Text
  optionA        String
  optionB        String
  optionC        String
  optionD        String
  correctAnswer  String   // A, B, C, D
  timeLimit      Int      @default(30)  // seconds
  difficulty     Difficulty @default(MEDIUM)

  createdAt      DateTime @default(now())

  @@index([difficulty])
}

// =====================
// Read & Answer Questions
// =====================

model ReadAnswerQuestion {
  id            String   @id @default(cuid())
  passage       String   @db.Text
  question      String   @db.Text
  optionA       String
  optionB       String
  optionC       String
  optionD       String
  correctAnswer String   // A, B, C, D
  difficulty    Difficulty @default(MEDIUM)

  createdAt     DateTime @default(now())

  @@index([difficulty])
}

// =====================
// Summarize Questions
// =====================

model SummarizeQuestion {
  id            String   @id @default(cuid())
  passage       String   @db.Text
  sampleSummary String   @db.Text
  keywords      String   // คำสำคัญที่ควรมี คั่นด้วย |
  difficulty    Difficulty @default(MEDIUM)

  createdAt     DateTime @default(now())

  @@index([difficulty])
}

// =====================
// Continue Story Questions
// =====================

model ContinueStoryQuestion {
  id            String   @id @default(cuid())
  storyStart    String   @db.Text
  keywords      String   // คำสำคัญที่ควรมี คั่นด้วย |
  minLength     Int      @default(50)
  difficulty    Difficulty @default(MEDIUM)

  createdAt     DateTime @default(now())

  @@index([difficulty])
}

// =====================
// Daily Vocabulary
// =====================

model DailyVocab {
  id          String   @id @default(cuid())
  word        String
  meaning     String
  example     String   @db.Text
  forDate     DateTime @unique

  createdAt   DateTime @default(now())

  @@index([forDate])
}

// =====================
// User Vocab Collection (Gacha)
// =====================

model UserVocabCollection {
  id          String   @id @default(cuid())
  odUserId    String   @map("userId")
  word        String
  meaning     String
  example     String?  @db.Text
  rarity      String   @default("COMMON")  // COMMON, RARE, EPIC, LEGENDARY

  collectedAt DateTime @default(now())

  @@unique([odUserId, word])
  @@index([odUserId])
}

// =====================
// Gacha Vocabulary Pool
// =====================

model GachaVocab {
  id          String   @id @default(cuid())
  word        String   @unique
  meaning     String
  rarity      String   @default("COMMON")  // COMMON, RARE, EPIC, LEGENDARY

  createdAt   DateTime @default(now())

  @@index([rarity])
}

// =====================
// User Question History (Track answered questions)
// =====================

model UserQuestionHistory {
  id           String   @id @default(cuid())
  userId       String
  questionId   String   // ID of the question from any game table
  gameType     String   // Which game (VOCAB_MATCH, FILL_BLANK, etc.)
  wasCorrect   Boolean  @default(false)
  answeredAt   DateTime @default(now())

  @@unique([userId, questionId, gameType])
  @@index([userId])
  @@index([userId, gameType])
  @@index([answeredAt])
}

// =====================
// Game Sessions
// =====================

enum GameType {
  // Vocabulary Games
  VOCAB_MATCH          // จับคู่คำ
  VOCAB_MEANING        // ความหมายคำศัพท์
  VOCAB_OPPOSITE       // คำตรงข้าม
  VOCAB_SYNONYM        // คำพ้องความหมาย

  // Grammar Games
  FILL_BLANK           // เติมคำ
  FIX_SENTENCE         // แก้ไขประโยค
  ARRANGE_SENTENCE     // เรียงประโยค
  SPEED_GRAMMAR        // Speed Grammar

  // Reading & Writing Games
  READ_ANSWER          // อ่านแล้วตอบ
  COMPOSE_SENTENCE     // แต่งประโยค
  SUMMARIZE            // สรุปเรื่อง
  CONTINUE_STORY       // เขียนต่อเรื่อง

  // Fun Games
  DAILY_VOCAB          // คำศัพท์รายวัน
  RACE_CLOCK           // แข่งกับเวลา
  VOCAB_GACHA          // กาชาคำศัพท์
}

model LanguageGameSession {
  id           String    @id @default(cuid())
  odUserId     String
  gameType     GameType
  
  // Game state
  questions    Json      @default("[]")
  answers      Json      @default("[]")
  currentIndex Int       @default(0)
  isCompleted  Boolean   @default(false)
  
  // Results
  correctCount Int       @default(0)
  totalCount   Int       @default(0)
  pointsEarned Int       @default(0)
  
  startedAt    DateTime  @default(now())
  completedAt  DateTime?
  
  @@map("language_game_sessions")
  @@index([odUserId])
  @@index([gameType])
  @@index([isCompleted])
}
